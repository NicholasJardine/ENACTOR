<h1>PrivateBriefs#show</h1>
<p>Find me in app/views/private_briefs/show.html.erb</p>


<table class="mt-3" style="width:50%; color: white">
  <tr>
    <th>Character Information</th>
  </tr>
  <tr>
    <td>Age:  <%= @private_brief.age %> </td>
  </tr>

  <tr>
    <td>Name:  <%= @private_brief.name %> </td>
  </tr>
  <tr>
    <td>Ethnicity:  <%= @private_brief.ethnicty %> </td>
  </tr>
  <tr>



</table>
<div class="mt-3">

       <%= link_to "Download script", (url_for(@brief.scene)), class: "btn-flat-orange" %>

</div>
       <br>
       <br>
       <% if @user.occupation == "Actor" %>

       <h2 style="color:white;">When you are ready, please attach your audition video here </h2>
             <div>
        <%= link_to decline_path(@private_brief), method: :patch, class:"d-flex justify-content-end" do %>
          <i class="fas fa-times" style="font-size: 20px; color: red;"></i>
        <% end %>
      </div>

        <br>
        <br>
        <div class="row">

          <div class="col-6">

        <div class="accordion" id="accordionExample" style="background: #b5076b;">
          <div class="card">
            <div class="card-header" id="headingOne" style="background: #b5076b;">
              <h2 class="mb-0">
                <button class="btn btn-link " style="background: #b5076b;" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                   <strong> Upload Audition</strong>
               </button>
              </h2>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
              <div class="card-body">
              <div class="form_inputs">
                <div class="new-form-inputs">
              <%= simple_form_for [@private_audition] do |f| %>

              <div class="form_inputs">
                <div class="new-form-inputs">
                <%= f.input :title, label: "the title of your audition" %>
                <%= f.input :video, as: :file, :resource_type => :video%>
                <%= f.input :private_brief_id, :as => :hidden, :input_html => { :value => @private_brief.id } %>
                <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>

        <%= f.button :submit, class: "btn btn-flat-orange", value: "Submit Audition" %>
            </div>
          </div>
        </div>
            </div>
          </div>
        </div>
          </div>


          </div>
        </div>
</div>
      <% end %>

       <% else %>
       <h3 style="color: white;"> the following videos have been submitted for this brief</h3>
       <p> currently there are <%= "#{@auditions.length}" %> auditions to watch</p>
        <% @auditions.each do |audition|%>
        <%= link_to private_audition_path(audition) do %>

       <div class="brief-links">

<!--               <p> <%= audition.title %></p>
 -->              <p> <%= audition.user.name %> </p>
              <% end %>
       </div>
<% end %>

<% end %>

