              <%= link_to "Messages", "#", class: "nav-link" %>
            </li>
                    <li class="nav-item">
              <%= link_to "My Profile", profile_path(current_user), class: "nav-link" %>
            </li>

          <li class="nav-item dropdown">
            <%= cl_image_tag @user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Edit profile", "#", class: "dropdown-item" %>
              <%= link_to "My Dashboard", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
            <li class="nav-item active">
              <%= link_to "Home", pages_home_path, class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to "Briefs & Auditions", "#", class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to "Create a Brief", new_brief_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Messages", "#", class: "nav-link" %>
            </li>
                    <li class="nav-item">
              <%= link_to "My Profile", profile_path(current_user), class: "nav-link" %>
            </li>

          <li class="nav-item dropdown">
            <%= image_tag "default-avatar.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Edit profile", "#", class: "dropdown-item" %>
              <%= link_to "My Dashboard", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
          <% end %>


      <% else %>
        <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link" %></li>
        </li>
        <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %></li>
        </li>
      <% end %>
    </ul>
  </div>
</div>

