<% langs = ["ISIZULU",
"ISIXHOSA",
"SEPEDI (NORTH SOTHO)",
"SETSWANA",
"NDEBELE",
"SESOTHO (SOUTH SOTHO)",
"TSHIVENDA",
"TSONGA",
"SWAZI",
"ENGLISH",
"AFRIKAANS",
"SASL",
"KHOEKHOE",
"FRENCH",
"KISWAHILI",
"PORTUGUESE",
"SHONA",
"ARABIC",
"DUTCH",
"GERMAN",
"SOMALI",
"AMHARIC",
"HEBREW",
"YORUBA",
"OROMO",
"HAUSA",
"IGBO"].sort %>
<% ages =["[0-10]","[9-19]","[20-29]","[30-39]","[40-49]","[50-59]","[60-69]","[70-79]","[80 + ]"] %>
<% talents =["Singing", "Dancing", "Martial arts", "Sports", "Public Speaking", "Modeling"] %>
<% provinces= ["Gauteng", "Western Cape", "Eastern Cape", "Northern Cape", "Kwa-Zulu Natal", "Free State", "Mpumalanga", "Limpopo", "North West"] %>



<div class="container mt-5">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="form-inputs">
    <%= f.error_notification %>
  <div class="row">
    <div class="col-6" style="position: relative; margin:0 auto;">
    <h2>Account details</h2>
      <%= f.input :email, required: true, autofocus: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>

      <%= f.input :name, label: "Full Name" %>

      <br><br><br>


    <% if current_user.occupation == "Actor" %>

      <h2>Profile Info (For Casting)</h2>
      <%= f.input :photo, as: :file, label:"Select Profile Picture" %>
<!--       <%= f.input :age_range, collection:ages, label: "Age"%>
 -->      <%= f.input :age, label: "Age"%>

      <%= f.input :gender, collection:["Male", "Female", "Non-Binary"], label: "Gender"%>
      <%= f.input :ethnicty, collection:["Black", "White","Mixed", "Coloured (South Africa)", "Asian", "Indian", "Racially Ambiguos", "Khoi Khoi", "San" ], label: "Race/Ethnicity"%>
      <%= f.input :language, collection:langs, label: "Language "%>
      <%= f.input :province, collection:provinces, label: "The province you currently live in"%>
 <h2>Personal Touches</h2>
    <%= f.input :bio, label: "Bio"%>
    <%= f.input :talents,collection:talents, label: "Extra talents"%>
    <%= f.input :socialmedia, label: "Your social media handles and/or links"%>
    <%= f.input :cv, as: :file, :resource_type => :raw, label: "Attach a PDF copy of your CV (optional)" %>

    <h3 style="color:white;"> Agent Details </h3>
    <%= f.input :agent_details, label: "If you have an agent, feel free to fill in their contact information here."%>
  <div class="form-actions">
    <%= f.button :submit, "Update", class: 'btn-flat-orange' %>
  </div>
    <% else %>
     <h2>Company information</h2>
      <%= f.input :name, label: "Company Name" %>
      <%= f.input :age, label: "Years of Experience"  %>
      <%= f.input :address, label: "Your Company Address"%>
      <%= f.input :bio, label: "Tell us about your Organisation?"%>
      <%= f.input :photo, as: :file, label:"Upload your company logo here." %>
      <%= f.input :socialmedia, label: "Your social media handles and/or links"%>
      <%= f.input :website, label: "Fill in a link to your Website."%>
      <%= f.input :tel, label: "Company phonenumber"%>
      <%= f.input :company_email, label: "Company email address"%>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: 'btn-flat-orange' %>
  </div>
    </div>
  </div>
  <% end %>
  <br><br><br>
  </div>
    <% end %>
</div>
