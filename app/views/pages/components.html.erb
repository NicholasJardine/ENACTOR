<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active img-fluid">
    <h5 class="mb-3"style="font-weight: bold; text-align: center"><%= @last.title.upcase %></h5>
    <%= cl_image_tag @last.image.key, height: 500, width: 1000, crop: :scale %>
    <div class="carousel-caption d-none d-md-block">
    <div class="mt-5">
    <p><%= link_to "Read More", article_path(@last), class: "btn-flat-dis"%></p>

    </div>
    </div>
    </div>
    <% @articles_without_latest.each do |article| %>

    <div class="carousel-item img-fluid">
    <h5 class='mb-3'style="text-align: center;"><%= article.title.upcase %></h5>
    <%= cl_image_tag article.image.key, height: 500, width: 1000, crop: :scale %>
    <div class="carousel-caption d-none d-md-block">
    <div class="mt-5">
    <p><%= link_to "Read More", article_path(article), class: "btn-flat-dis" %></p>

    </div>
    </div>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

<% end %>

