
<div class="owl-carousel">
    <% @articles.each do |article| %>
    <div>
      <%= article.title %>
      <%= article.description %>
    </div>
  <% end %>
</div>
<%= content_for(:after_js) do %>
<script>
$(document).ready(function(){
$('.owl-carousel').owlCarousel({
  stagePadding: 50,
  loop: true,
  margin:10,
  responsive:{
    0:{
      items:1
     },
    600:{
     items:3
     }
   }
 })
});
</script>
<% end %>
