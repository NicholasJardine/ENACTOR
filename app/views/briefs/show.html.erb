       <% if @user.occupation == "Actor" %>

       <h3 style="color:white; font-size: 24px;">WHEN YOU ARE READY, PLEASE ATTACH YOUR AUDITION HERE:</h3>

        <br>
        <br>
        <div class="row">

          <div class="col-12">

        <div class="accordion" id="accordionExample" style="background-color:#CCA459;">
          <div class="card">
            <div class="card-header" id="headingOne" style="background-color:#CCA459;">
              <h2 class="mb-0">
                <button class="btn btn-link " style="background-color:#CCA459;" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                   <strong> Upload Audition</strong>
               </button>
              </h2>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
              <div class="card-body">
              <div class="form_inputs">
                <div class="new-form-inputs">
              <%= simple_form_for [@audition] do |f| %>

              <div class="form_inputs">
                <div class="new-form-inputs">
                <%= f.input :title, label: "the title of your audition" %>
                <%= f.input :video, as: :file, :resource_type => :video%>
                <%= f.input :brief_id, :as => :hidden, :input_html => { :value => @brief.id } %>
                <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>

            </div>
          </div>
        </div>

        <%= f.button :submit, class: "btn btn-flat-orange", value: "Submit Audition" %>

          </div>
        </div>
</div>
</div>
