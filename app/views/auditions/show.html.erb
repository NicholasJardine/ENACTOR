<div class="mt-3">

<h3 style="color: white;"> Audition Title: <%=@audition.title  %></h3>
<%= link_to user_path(@u) do %>
<h3 style="color: white;"> Submitted by: <%= @u.name %></h3>
<% end %><br>
</div>

<div class="screen" style="display: flex; align-items: center; justify-content: center;">


<%= cl_video_tag(url_for(@audition.video),:width => 1000, :height => 500,
  :crop => :pad, :background => "blue",
  :preload => "none", :controls => true,
  :fallback_content => "Your browser does not support HTML5 video tags" )%>


</div>
