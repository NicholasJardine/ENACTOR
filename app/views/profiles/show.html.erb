


    <% if @user.name == nil%>
    <h1 style="color: white;">some details are missing in your profile, click the button to create your profile</h1>
        <%= link_to  "Create Profile", edit_user_registration_path, class: "btn btn-flat-orange" %>
    <% else %>

    <div class="mt-3">


      <% if @user.occupation == "Actor" %>

          <table class="mt-3" style="width:50%; color: white">
            <%= cl_image_tag @user.photo.key, height: 400, width: 500, crop: :fill %>
            <tr>
              <th><h3>My Details</h3></th>
            </tr>

            <tr>
              <td>Name:  <%= @user.name %> </td>
            </tr>
            <tr>
              <td>Age:  <%= @user.age_range %> </td>
            </tr>
            <tr>
              <td>Ethnicity:  <%= @user.ethnicty %> </td>
            </tr>
            <tr>
              <td>Gender:  <%= @user.gender %> </td>
            </tr>
            <tr>
              <td>Skills:  <%= @user.talents %> </td>
            </tr>
            <tr>
              <td>Social Media:  <%= @user.socialmedia %> </td>
            </tr>
          </table>
          <br> <br>
            <div>
              <h3 style="color: white;">About me: </h3>
            </div>
             <p> <%= @user.bio %>  </p>
             <br>
             <h3 style="color:white"> My Agent's Details: </h3>
              <p>Agent:  <%= @user.agent_details %> </p>

      <% else %>

            <h3 style="color: white; text-decoration: underline;"> <%= @user.name.upcase %></h3><br>
          <table class="mt-3" style="width:50%; color: white">
            <%= cl_image_tag @user.photo.key, height: 400, width: 500, crop: :fill %>
            <tr>
              <th><h3>Company Details</h3></th>
            </tr>

            <tr>
              <td> Company Name:  <%= @user.name %> </td>
            </tr>
            <tr>
              <td>Years of experience:  <%= @user.age %> </td>
            </tr>
            <tr>
              <td>Address:  <%= @user.address %> </td>
            </tr>
            <tr>
              <td>Company Website:  <%= @user.website %> </td>
            </tr>
            <tr>
              <td>Social Media:  <%= @user.socialmedia %> </td>
            </tr>
          </table>
          <br> <br>
            <div>
              <h3 style="color: white;">About Us: </h3>
            </div>
             <p> <%= @user.bio %>  </p>
             <br>
             <h3 style="color:white"> Get in Touch with Us </h3>
              <p>Contact Details:  <%= @user.agent_details %> </p>

      <% end %>

    <% end %>


    </div>

<h3 style="color:#b5076b">Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %></p>



