        <div class="row">

          <div class="col-2">

        <div class="accordion" id="accordionExample" style="background: #b5076b;">
          <div class="card">
            <div class="card-header" id="headingOne" style="background: #b5076b;">
              <h2 class="mb-0">
                <button class="btn btn-link " style="background: #b5076b;" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                   <strong> Send a private brief</strong>
               </button>
              </h2>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
              <div class="card-body">
              <div class="form_inputs">
                <div class="new-form-inputs">
              <%= simple_form_for [@private_brief] do |f| %>

              <div class="form_inputs">
                <div class="new-form-inputs">
                <%= f.input :title, label: "Name of this brief" %>
                <%= f.input :name, label: "Name of character" %>
                <%= f.input :age, label: "Age"  %>
                <%= f.input :gender, collection:["Male", "Female", "Non-Binary"], label: "Gender"%>
                <%= f.input :ethnicty, collection:["Black", "White","Mixed", "Asian", "Indian", "Racially Ambiguos" ], label: "Race/Ethnicity"%>
                <%= f.input :marital_status, collection:["Single", "Married"], label: " Marital Status"%>
                <%= f.input :language, collection:langs, label: "Language "%>

                <%= f.input :attachment, as: :file, label:"Click here to attach scripts." %>
                <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
                <%= f.input :user_id, :as => :hidden, :input_html => { :value => @u.id } %>
                <%= f.input :sender_id, :as => :hidden, :input_html => { :value => @user.id.to_i } %>

            </div>
          </div>
        </div>

        <%= f.button :submit, class: "btn btn-flat-orange", value: "Send" %>

