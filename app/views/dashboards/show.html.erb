
<div class="container">

  <div class="mt-5">


    <% if @user.occupation == "Actor" %>

<div class="row"><div class="col-6" style="border: solid 1px; border-color:#CCA459; border-radius: 4px; padding: 16px;">
<h2 class="mb-5" style="text-decoration: underline; color:#CCA459; font-weight: bold; ">OPPORTUNITIES</h2>
      <h3 style="color:#CCA459;">NEW</h3>
      <% if @matching_briefs == []  %>
        <p style="color:white; font-size: 20px;">Currently, there are no briefs that match your profile</p>

      <% else %>
        <% @matching_briefs.each do |brief| %>
          <div class="match">
            <%= link_to brief_path(brief) do %>
                <div>
                  <p style="color:white;font-size: 20px;"><%= brief.title %></p>
                </div>
          </div>
            <% end %>


                  <div class="col-3 d-flex" style="">
            <%= link_to acceptb_path(user_brief_id: brief.user_briefs.first.id, brief_id: brief.id), method: :patch, class:"d-flex justify-content-end" do %>
              <p style="font-size: 20px; color: green;"> ACCEPT</p>
            <% end %>
            <%= link_to declineb_path(user_brief_id: brief.user_briefs.first.id, brief_id: brief.id), method: :patch, class:"d-flex justify-content-end" do %>
              <p style="font-size: 20px; color: red;"> DECLINE</p>
            <% end %>
          </div>


        <% end %>

      <% end %>

    <br>


    <h3 style="color:#CCA459;"> ACCEPTED </h3>
    <% if @accepted ==[] %>
      <p style="color:white;font-size: 20px;"> Currently you have not accepted any briefs.</p>
    <% else %>

        <% @accepted.each do |brief| %>
          <div class="match">
            <%= link_to brief_path(brief) do %>
                <div>
                  <p style="color:white;font-size: 20px;"><%= brief.title %></p>
                </div>
                <div class="col-3 d-flex justify-content-between">
                    <%= link_to deleteb_path(user_brief_id: brief.user_briefs.first.id, brief_id: brief.id), method: :patch, class:"d-flex justify-content-end" do %>
              <p style="font-size: 20px; color: blue;"> DELETE</p>
            <% end %>
              </div>
          </div>
            <% end %>
            <% end %>

    <% end %>
    <br>
            <h3 style="color:#CCA459;"> DECLINED</h3>

            <% if @declined ==[] %>

      <p style="color:white;font-size: 20px;"> Currently you have not declined any briefs.</p>

            <% else %>

        <% @declined.each do |brief| %>
          <div class="match">
            <%= link_to brief_path(brief) do %>
                <div>
                  <p style="color:white;font-size: 20px;"><%= brief.title %></p>
                </div>
                <div class="col-3 d-flex justify-content-between">
                    <%= link_to deleteb_path(user_brief_id: brief.user_briefs.first.id, brief_id: brief.id), method: :patch, class:"d-flex justify-content-end" do %>
              <p style="font-size: 20px; color: blue;"> DELETE</p>
            <% end %>
              </div>
          </div>
            <% end %>
            <% end %>

            <% end %>

<br>

</div>
<div class="col-6">
  <h2 class="mb-5" style="text-decoration: underline;font-weight: bold; color:#CCA459; ">PRIVATE REQUESTS</h2>

    <h3 style="color: #CCA459;"> YOU'VE BEEN REQUESTED FOR: </h3>
    <% if @my_private_briefs ==[] %>
      <p style="color:white;font-size: 20px;"> Nothing yet. Your time is coming!</p>
    <% else %>
