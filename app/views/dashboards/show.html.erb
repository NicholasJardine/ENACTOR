      <%= link_to private_brief_path(brief) do %>
        <div> <p style="color:white;font-size: 20px;"> <%= brief.title %></p></div>
                        <div class="col-3 d-flex justify-content-between">
                    <%= link_to deletepb_path(private_invite_id: brief.private_invites.first.id, private_brief_id: brief.id), method: :patch, class:"d-flex justify-content-end" do %>
              <p style="font-size: 20px; color: blue;"> DELETE</p>
            <% end %>
              </div>
      <% end %>
      <% end %>

      <% else %>

      <p style="color:white;font-size: 20px;"> Currently, you have not accepted any private requests</p>

